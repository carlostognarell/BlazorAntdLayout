@inherits LayoutComponentBase

@code
{
    bool collapsed;

    void toggle()
    {
        collapsed = !collapsed;
    }
}

<Layout Style="height:100vh">
    <Sider Collapsible Collapsed=@collapsed NoTrigger OnCollapse="OnCollapse">
        <div class="logo" style="height:60px;" />
        <Menu Theme="MenuTheme.Dark" Mode="MenuMode.Inline" DefaultSelectedKeys=@(new[]{"1"})>
            <MenuItem Key="1" RouterLink="/">
                <Icon Type="user" Theme="outline" />
                <span>Index</span>
            </MenuItem>
            <MenuItem Key="2" RouterLink="counter">
                <Icon Type="plus" Theme="outline" />
                <span>Counter</span>
            </MenuItem>
            <MenuItem Key="3" RouterLink="antgrid">
                <Icon Type="bars" Theme="outline" />
                <span>Fetch Data</span>
            </MenuItem>
            <MenuItem Key="4" RouterLink="buttons">
                <Icon Type="forward" Theme="outline" />
                <span>Buttons</span>
            </MenuItem>
            <MenuItem Key="5" RouterLink="forms">
                <Icon Type="form" Theme="outline" />
                <span>Forms</span>
            </MenuItem>
            <MenuItem Key="6" RouterLink="antd/antdmodal">
                <Icon Type="form" Theme="outline" />
                <span>Modal</span>
            </MenuItem>
            <MenuItem Key="7" RouterLink="antd/antdautocomplete">
                <Icon Type="form" Theme="outline" />
                <span>AutoComplete</span>
            </MenuItem>
            <MenuItem Key="8" RouterLink="antd/antddatepicker">
                <Icon Type="calendar" Theme="outline" />
                <span>DatePicker</span>
            </MenuItem>
        </Menu>
    </Sider>
    <Layout Class="site-layout">
        <Header Class="site-layout-background">
            @if (collapsed)
            {
                <Icon Type="menu-unfold" Theme="outline" Class="trigger" OnClick="toggle" />
            }
            else
            {
                <Icon Type="menu-fold" Theme="outline" Class="trigger" OnClick="toggle" />
            }
        </Header>
        <Content Style=" margin: 24px 16px 0;">
            <div class="site-layout-background" style="padding: 24px; min-height: 360px">
                @Body
            </div>
        </Content>
    </Layout>
</Layout>

<style>
    #components-layout-demo-custom-trigger .trigger {
        font-size: 18px;
        line-height: 64px;
        padding: 0 24px;
        cursor: pointer;
        transition: color 0.3s;
    }

        #components-layout-demo-custom-trigger .trigger:hover {
            color: #1890ff;
        }

    #components-layout-demo-custom-trigger .logo {
        height: 32px;
        background: rgba(255, 255, 255, 0.2);
        margin: 16px;
    }

    .site-layout .site-layout-background {
        background: #fff;
    }
</style>


@code{

    void OnCollapse(bool isCollapsed)
    {
        Console.WriteLine($"Collapsed: {isCollapsed}");
    }

}